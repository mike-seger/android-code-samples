<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/v_animation_obj"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/round_corners"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accelerate"
                android:onClick="accelerateInterpolator"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Decelerate"
                android:onClick="decelerateInterpolator"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accelerate Decelerate"
                android:onClick="accelerateDecelerateInterpolator"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Linear"
                android:onClick="linearInterpolator"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anticipate"
                android:onClick="anticipateInterpolator"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overshoot"
                android:onClick="overshootInterpolator"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anticipate Overshoot"
                android:onClick="anticipateOverShootInterpolator"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cycle"
                android:onClick="cycleInterpolator"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bounce"
                android:onClick="bounceInterpolator"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>