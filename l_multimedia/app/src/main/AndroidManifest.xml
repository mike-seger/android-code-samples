<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.imagination.technologies.multimedia" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".MediaPlayerDemo"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".VideoViewActivity"
            android:label="@string/title_activity_media_player"
            android:configChanges="orientation|screenLayout|screenSize"
            />

        <activity
            android:name=".MediaPlayerVideo"
            android:label="@string/title_activity_media_player"
            android:configChanges="orientation|screenLayout|screenSize"
            />

        <activity
            android:name=".AudioMediaPlayer"
            android:label="@string/audio_media_player"
            android:configChanges="orientation|screenLayout|screenSize"
            />

    </application>

</manifest>
